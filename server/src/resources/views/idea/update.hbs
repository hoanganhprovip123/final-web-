<div class="mt-4">
    <h3>List Idea</h3>

    <form method="POST" action="/idea/{{ideas._id}}?_Method=PUT">
        <div class="form-group">
            <label for="title">Title</label>
            <input type="text" class="form-control" id="title" name="title" value="{{ideas.title}}">
        </div>
        <div class="form-group">
            <label for="description">Description</label>
            <input type="text" class="form-control" id="description" name="description" value="{{ideas.description}}">
        </div>
        <div class="form-group">
            <label for="slug">Slug</label>
            <input type="text" class="form-control" id="slug" name="slug" value="{{ideas.slug}}">
        </div>
        <br>
        <button type="submit" class="btn btn-primary">Update Idea</button>
    </form>
</div>