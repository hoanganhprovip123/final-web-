<div class="container">
    <div>
        <h3>List Account</h3>
        <a href="/auth/trashAccount">Restore</a>
        <br>
    </div>
    <table class="table">
        <thead class="thead-dark">
        <tr>
            <th scope="col">#</th>
            <th scope="col">Username</th>
            <th scope="col">Password</th>
            <th scope="col">FullName</th>
            <th scope="col">Phone</th>
            <th scope="col">Email</th>
            <th scope="col">Gender</th>
            <th scope="col">Role</th>
            <th scope="col">Action</th>
        </tr>
        </thead>
        <tbody>
        {{#each accounts}}
            <tr>
                <th scope="row">{{sum @index 1}}</th>
                <td>{{this.username}}</td>
                <td>{{this.password}}</td>
                <td>{{this.fullName}}</td>
                <td>{{this.phone}}</td>
                <td>{{this.email}}</td>
                <td>{{this.gender}}</td>
                <td>{{this.role}}</td>
                <td>
                    <button type="button" class="btn btn-info"><a href="/auth/{{this._id}}/updateAccount" style="color: white">Update</a></button>
                    <button type="button" class="btn btn-info"><a href="" style="color: white" data-id="{{this._id}}" data-toggle="modal" data-target="#delete-account">Delete</a></button>
                </td>
            </tr>

        {{else}}
            <tr>
                <td colspan="8">
                    You don't have any account.
                </td>
            </tr>
        {{/each}}
        </tbody>
    </table>
</div>

<div class="modal fade" id="delete-account" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Delete Account</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                Do you want to delete this account?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button id="btn-delete-account" type="button" class="btn btn-primary">Delete Account</button>
            </div>
        </div>
    </div>
</div>

<form name="delete-account-form" method="POST"></form>

<script language="JavaScript">
    document.addEventListener('DOMContentLoaded', function (){
        let accountID;
        let deleteForm = document.forms['delete-account-form'];
        let btnDeleteAccount = document.getElementById('btn-delete-account');

        //When confirm clicked
        $('#delete-account').on('show.bs.modal', function (event) {
            let button = $(event.relatedTarget)
            accountID = button.data('id');
        })

        btnDeleteAccount.onclick = function (){
            deleteForm.action = '/auth/' + accountID + '?_Method=DELETE';
            deleteForm.submit();
        }
    });
</script>

